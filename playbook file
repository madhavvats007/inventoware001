---
- name: Automate Apache Setup
  hosts: local
  become: yes
  tasks:
    - name: Update apt package list
      apt:
        update_cache: yes

    - name: Install Apache2
      apt:
        name: apache2
        state: present

    - name: Start and enable Apache2 service
      service:
        name: apache2
        state: started
        enabled: yes
